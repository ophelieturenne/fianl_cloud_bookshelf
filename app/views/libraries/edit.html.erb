<h1>Edit Library: <%= @library.name %></h1>

<%= simple_form_for @library do |f| %>
  <div class="form-group">
    <%= f.input :name, label: "Library Name" %>
  </div>
  <%= f.button :submit, "Update Library", class: "btn btn-success" %>
<% end %>

<%= link_to "Back to Libraries", library_path(@library), class: 'btn btn-secondary' %>